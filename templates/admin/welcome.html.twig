{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content %}


	{% if artist %}
		<div class="d-flex justify-content-center">
			<div class="card mb-4 shadow-sm" style="max-width: 500px; width: 100%;">

				{% if artist['coverImage'] is defined and artist['coverImage'] %}
					<img src="{{ artist['coverImage'] }}" class="card-img-top" alt="{{ artist['name'] }}">
					dd
				{% endif %}
				<div class="card-body">
					<h5 class="card-title">{{ artist.name }}</h5>
					<div class="image text-center mb-3">
						<img src="{{ artist.coverImage }}" alt="{{ artist.name }}" class="img-fluid rounded shadow-sm" style="max-width: 50%; width: 100%; height: auto;" loading="lazy">
					</div>

					<p>
						<strong>Genre principal:</strong>
						{{ artist.mainGenre }}</p>
					<p>
						{% if artist.subGenres %}
							<p>
								<strong>Sous-genres:</strong>
								{{ artist.subGenres|join(', ') }}</p>
						{% endif %}
						{% if artist.members %}
							<p>
								<strong>Membres:</strong>
								{{ artist.members|map(m => m.name)|join(', ') }}
							</p>
						{% endif %}
						<strong>Pays:</strong>
						{{ artist.country }}</p>
					<strong>Ville de formation:</strong>
					<p>{{ artist.beginArea }}</p>
					{# <p>
											<strong>Année de création:</strong>
											{{ artist.lifeSpan.begin  }}</p>
										<p> #}
					<strong>Biographie:</strong>
					{# {{ artist.biography }}</p> #}


				{% if artist.albums %}
					<p>
						<strong>Albums:</strong>
						{{ artist.albums|join(' | ') }}
					{% endif %}
					<div class="container">
						<a href="{{ path('admin') }}" class="btn btn-primary mt-2">Changer d'artiste</a>
					</div>
				</div>
			</div>
		</div>
	{% else %}
		<p>Aucun artiste disponible.</p>
	{% endif %}
{% endblock %}
